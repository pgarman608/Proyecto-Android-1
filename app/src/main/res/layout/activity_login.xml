<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebddf6"
    tools:context=".controladores.LoginActivity">

    <View
        android:id="@+id/vwLogin"
        android:layout_width="302dp"
        android:layout_height="294dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/layoutviewlog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inconsolata"
        android:text="Iniciar Sesion"
        android:textColor="#006ca0"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vwLogin"
        app:layout_constraintEnd_toEndOf="@+id/vwLogin"
        app:layout_constraintStart_toStartOf="@+id/vwLogin"
        app:layout_constraintTop_toTopOf="@+id/vwLogin"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/etNombreLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#006ca0"
        android:textColorHint="#006ca0"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#006ca0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vwLogin"
        app:layout_constraintEnd_toEndOf="@+id/vwLogin"
        app:layout_constraintStart_toStartOf="@+id/vwLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/etContrasenaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#006ca0"
        android:textColorHint="#006ca0"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="#006ca0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vwLogin"
        app:layout_constraintEnd_toEndOf="@+id/vwLogin"
        app:layout_constraintStart_toStartOf="@+id/vwLogin"
        app:layout_constraintTop_toBottomOf="@+id/etNombreLogin"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="#006ca0"
        android:textColorHint="#006ca0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vwLogin"
        app:layout_constraintVertical_bias="0.28" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutobuttonlog"
        android:text="Login"
        android:textColor="#006ca0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegistrar"
        app:layout_constraintVertical_bias="0.36" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="157dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toTopOf="@+id/vwLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iascene" />

</androidx.constraintlayout.widget.ConstraintLayout>